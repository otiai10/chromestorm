{
  "name": "chromestorm",
  "version": "0.0.1",
  "description": "Storage ORM for chrome.storage",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --config=./jest.config.ts",
    "e2e": "npm run build && cp -r ./lib ./e2e/app/lib && npm run build:app && ts-node ./e2e/run.ts",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "build:app": "parcel build --no-cache --target e2e",
    "clean": "rm -rf ./lib ./e2e/app/lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otiai10/chromestorm.git"
  },
  "keywords": [
    "chrome",
    "storage",
    "object-relation-mapper",
    "orm"
  ],
  "author": "otiai10",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otiai10/chromestorm/issues"
  },
  "homepage": "https://github.com/otiai10/chromestorm#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.204",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "parcel": "^2.8.2",
    "puppeteer": "^19.4.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "targets": {
    "main": false,
    "e2e": {
      "source": "./e2e/app/src/background.js",
      "distDir": "./e2e/app/dist",
      "context": "browser",
      "outputFormat": "global",
      "isLibrary": false,
      "optimize": false,
      "sourceMap": false
    }
  }
}
